<%= image_tag @user.avatar.url(:thumb), class: "smallAvatar" %>
<%= @user.email %>
  <% if @user == current_user %>
    <%= form_for current_user, html: { multipart: true } do |form| %>
    <%= form.file_field :avatar %>
    <%= form.submit %>
  <% end %>
<% end %>
<br>

<%= render 'posts/listing', posts: @user.posts %>

<%= link_to 'Back', posts_path, class: "btn btn-dark" %>
