<%= stylesheet_link_tag "posts" %>
<%= form_for @user, url: users_path do |form| %>
  <%= form.file_field :avatar %>
  <%= form.submit %>
<% end %>
<%= link_to "HOME", home_path %>
<br>
<div style="padding-left: 40%">
  <h4>New post</h4>
  <%= form_tag posts_path, method: :post do %>
  <%= text_field_tag :content %>
  <%= submit_tag "Post", class: "btn btn-large btn-primary" %>
  <% end %>
</div>
<body>
  <br>
  <% @posts.each do |post| %>
  <p>
    <h6 style="padding-left: 30%"><%= post.user.email %></h6>
    <div style="float: left; width: auto; padding-left: 30%;">
      <%= post.content %>
      <%= form_for posts_path, url: posts_path, html: { multipart: true } do |form| %>
      <%= form.file_field :picture %>
      <%= form.submit %>
      <% end %>
      <%= image_tag @user.avatar.url, size: '100' %>
      <%= post.likes_count %><%= link_to 'â™¡', like_post_path(post) %>
        <%= link_to "show", post_path(post) %>
    </div>
    <%= button_to "X",  post_path(post), method: :delete, form_tag: "myButton" %>
  </p>
  <br>
  <% end %>
</body>
