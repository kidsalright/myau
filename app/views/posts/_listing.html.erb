<%= stylesheet_link_tag "posts" %>

<% posts.each do |post| %>
<div class="feed">
<%= image_tag post.user.avatar.url, class: "smallAvatar"%>
<%= link_to "#{post.user.email}", user_path(post.user), class: "userName" %>
<br>
<div class="postText">
  <%= post.content %>
</div>
<% if post.user == current_user %>
  <%= button_to "X",  post_path(post), method: :delete, form_tag: "myButton" %>
<% end %>
<br>
<% if post.picture.exists? %>
  <div class="postPicture"><%= image_tag post.picture.url(:medium) %></div>
<% end %>
</div>
<br>
<br>
<% end %>
